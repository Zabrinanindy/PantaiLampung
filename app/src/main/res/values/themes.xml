<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PantaiLampung" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/biru</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/navy</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="ButtonGeneral">
        <item name="android:backgroundTint">@color/navy</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.PantaiLampung" parent="Base.Theme.PantaiLampung" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/biru</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.PantaiLampung</item>
    </style>
</resources>